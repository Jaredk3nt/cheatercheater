<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dev.jaredkent.cheatercheater.SearchFragment"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextbox"
            android:orientation="vertical"
            android:layout_marginTop="25dp">

            <TextView
                android:id="@+id/searchword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search for word in dictonary"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"/>

            <EditText
                android:id = "@+id/wordsearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search for word"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:layout_marginTop="15dp"
                android:paddingStart="5dp"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/searchbox"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="Search!"
                android:onClick="search"
                android:clickable="true"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/wordFound"
            android:visibility="invisible"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextbox"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:paddingTop="25dp"
            android:paddingBottom="25dp">

            <TextView
                android:id="@+id/word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:text="elephant"
                android:textSize="45sp"
                android:textColor="@color/gold"
                />

            <TextView
                android:id="@+id/found"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="is a word in the dictionary!"
                android:textSize="25sp"
                android:textAlignment="center"/>

        </LinearLayout>

        </LinearLayout>


</FrameLayout>
